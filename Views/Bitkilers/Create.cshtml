@model Case_Study.Models.Bitkiler

@{
    ViewBag.Title = "Create";
}

<h3>Yeni Bitki Ekle</h3>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.BitkiAdi, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.BitkiAdi, new { @class = "form-control", Placeholder = "Bitkinin Adı", Required = "" })
                @Html.ValidationMessageFor(model => model.BitkiAdi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BitkiAciklamasi, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.BitkiAciklamasi, new { @class = "form-control", Placeholder = "Bitkinin Açıklaması", Required = "" })
                @Html.ValidationMessageFor(model => model.BitkiAciklamasi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BitkiFaydasi, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.BitkiFaydasi, new { @class = "form-control", Placeholder = "Bitkinin Faydaları", Required = "" })
                @Html.ValidationMessageFor(model => model.BitkiFaydasi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BitkiResmi, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.BitkiResmi, new { @class = "form-control", Placeholder = "Bitkinin Resmi"})
                @Html.ValidationMessageFor(model => model.BitkiResmi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-info" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Bitkiler Sayfasına Git", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
